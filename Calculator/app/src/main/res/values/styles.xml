<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
    </style>

    <!--<style name="CustomTheme" parent="android:Theme.Light">-->
    <!--<item name="android:windowBackground">#000000</item>-->
    <!--<item name="android:colorBackground">#000000</item>-->
    <!--</style>-->


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DisplayStyle">
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment" tools:targetApi="17">textEnd</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="FunctionButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">#9D2235</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-condensed</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="LightGrayStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">#cccccb</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-condensed</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="DarkGrayStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">#414141</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily" tools:targetApi="16">sans-serif-condensed</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
